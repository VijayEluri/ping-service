<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
<head>
    <title>Feedback - Ping Service</title>
    <link rel="icon" type="image/png" href="${context:/favicon.png}" /> 
    <link rel="stylesheet" type="text/css" href="${context:/css/all.css}" />
    <link rel="stylesheet" type="text/css" href="${context:/css/feedback.css}" />
    <script type="text/javascript" src="${context:/js/jquery-1.4.2.min.js}"></script>
</head>
<body>
    <t:topbar />

    <h2><t:logo/> Feedback</h2>

    <div align="center">
    <font color="green" weight="bold"><p>${thanks}</p></font>
    <t:form>
        <div class="note-container">
        <p>
            <span class="note">${note}</span>
        </p>
        </div>
        <table>
        <tr>
            <td valign="top"><t:label for="message">Message:</t:label></td> 
            <td><t:textarea t:id="message" value="message" /></td>
        </tr>
        <tr>
            <td colspan="2" align="right"><t:submit value="Send Feedback"/></td>
        </tr>
        </table>
    </t:form>
    </div>

    <t:footer/>
</body>
</html>
